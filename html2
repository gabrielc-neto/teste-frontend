<body>

    <div class="form-container">
        <form id="whatsappForm">
            <h2>WhatsApp Linker</h2>
            
            <div class="input-group">
                <input type="tel" id="numero" placeholder="Ex: 5541999999999" required>
            </div>

            <div class="input-group">
                <input type="text" id="mensagem" placeholder="Sua mensagem automática">
            </div>

            <button type="submit" id="enviar">Gerar Link Agora</button>
        </form>
    </div>

    <script>
        const form = document.getElementById("whatsappForm");

        form.addEventListener("submit", function(event) {
            event.preventDefault(); // Evita o refresh da página

            // Captura valores
            let numeroBruto = document.getElementById("numero").value;
            let mensagem = document.getElementById("mensagem").value;

            // Tratamento: Remove tudo que não for número (pode digitar com parênteses que o JS limpa!)
            const numeroLimpo = numeroBruto.replace(/\D/g, '');

            if (numeroLimpo.length < 10) {
                alert("Por favor, insira um número válido com DDD.");
                return;
            }

            const linkFinal = `https://api.whatsapp.com/send?phone=${numeroLimpo}&text=${encodeURIComponent(mensagem)}`;
            
            // Abre em uma nova aba (melhor UX que mudar a página atual)
            window.open(linkFinal, "_blank");
        });
    </script>
</body>
